<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuegou.dao.SpuDao">

    <resultMap type="com.yuegou.entity.Spu" id="SpuMaps">
        <result property="spuId" column="spu_id" jdbcType="INTEGER"/>
        <result property="storeId" column="store_id" jdbcType="INTEGER"/>
        <result property="spuName" column="spu_name" jdbcType="VARCHAR"/>
        <result property="spuTitle" column="spu_title" jdbcType="VARCHAR"/>
        <result property="spuDescription" column="spu_description" jdbcType="VARCHAR"/>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="spuStatus" column="spu_status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="discount" column="discount" jdbcType="INTEGER"/>
        <association property="category" javaType="com.yuegou.entity.Category" select="com.yuegou.dao.CategoryDao.queryByIdAllStyle" column="category_id" />
        <collection property="skuList" ofType="com.yuegou.entity.Sku" select="com.yuegou.dao.SkuDao.queryBySpuId" column="spu_id"/>
        <collection property="attributeList" ofType="com.yuegou.entity.Attribute" select="com.yuegou.dao.AttributeDao.queryByCateId" column="category_id"/>
        <collection property="spuAttributeValueList" ofType="com.yuegou.entity.SpuAttributeValue" select="com.yuegou.dao.SpuAttributeValueDao.queryBySpuId" column="spu_id"/>
    </resultMap>

    <resultMap type="com.yuegou.entity.Spu" id="SpuMap">
        <result property="spuId" column="spu_id" jdbcType="INTEGER"/>
        <result property="storeId" column="store_id" jdbcType="INTEGER"/>
        <result property="spuName" column="spu_name" jdbcType="VARCHAR"/>
        <result property="spuTitle" column="spu_title" jdbcType="VARCHAR"/>
        <result property="spuDescription" column="spu_description" jdbcType="VARCHAR"/>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="spuStatus" column="spu_status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="discount" column="discount" jdbcType="INTEGER"/>
    </resultMap>



    <!--查询指定行数据-->
    <select id="queryBySpuId" resultMap="SpuMap">
        select
        spu_id, spu_name, spu_title, spu_description, category_id, spu_status, create_time, discount
        from spu
        where spu_id = #{spuId};
    </select>

    <!--新增所有列-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="spuId">
        insert into spu(spu_name, spu_title, spu_description, category_id, spu_status, create_time, discount)
        values (#{spuName}, #{spuTitle}, #{spuDescription}, #{categoryId}, #{spuStatus}, #{createTime},#{discount})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spu
        <set>
            <if test="spuName != null and spuName != ''">
                spu_name = #{spuName},
            </if>
            <if test="spuTitle != null and spuTitle != ''">
                spu_title = #{spuTitle},
            </if>
            <if test="spuDescription != null and spuDescription != ''">
                spu_description = #{spuDescription},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="spuStatus != null">
                spu_status = #{spuStatus},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="discount != null">
                discount = #{discount},
            </if>
        </set>
        where spu_id = #{spuId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from spu
        where spu_id = #{spuId}
    </delete>

    <select id="queryByStoreId" resultMap="SpuMap">
        select * from spu s JOIN relation r ON s.spu_id = r.spu_id where r.store_id = #{storeId}
    </select>

    <select id="queryByStoreIdMax" resultMap="SpuMaps">
        select * from spu s JOIN relation r ON s.spu_id = r.spu_id where r.store_id = #{storeId}
    </select>

    <select id="queryAll" resultMap="SpuMap">
        select spu_id, spu_name, spu_title, spu_description, category_id, spu_status, create_time, discount from spu limit #{size} offset #{offset};
    </select>

</mapper>

